{
  "manifest_version": 3,
  "name": "LinkedIn AI Commenter",
  "description": "Suggests smart AI-based comments for LinkedIn posts using Gemini.",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage", "tabs", "clipboardWrite"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
